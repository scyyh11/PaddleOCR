# PaddleOCR-VL HPS Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Gateway Configuration
# =============================================================================

# Maximum number of concurrent requests to Triton server
# Increase for higher throughput, decrease if Triton is overloaded
HPS_MAX_CONCURRENT_REQUESTS=16

# Inference timeout in seconds
# Increase for complex documents, decrease for faster failure detection
HPS_INFERENCE_TIMEOUT=600

# Log level: DEBUG, INFO, WARNING, ERROR
HPS_LOG_LEVEL=INFO

# Number of Uvicorn worker processes
# Recommended: 2-4 workers per CPU core
UVICORN_WORKERS=4

# =============================================================================
# GPU Configuration
# =============================================================================

# GPU device ID to use (0, 1, 2, etc.)
GPU_DEVICE_ID=0
