# PaddleOCR-VL HPS Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Gateway Configuration
# =============================================================================

# Maximum concurrent GPU-bound requests (layout-parsing / infer)
# Increase for higher throughput, decrease if GPU is overloaded
HPS_MAX_CONCURRENT_GPU_REQUESTS=16

# Maximum concurrent CPU-bound requests (restructure-pages)
# Can be set higher than GPU since CPU operations are lighter
HPS_MAX_CONCURRENT_CPU_REQUESTS=64

# Inference timeout in seconds
# Increase for complex documents, decrease for faster failure detection
HPS_INFERENCE_TIMEOUT=600

# Health check timeout in seconds
HPS_HEALTH_CHECK_TIMEOUT=5

# VLM server URL for health checks
# HPS_VLM_URL=http://paddleocr-vlm-server:8080

# Log level: DEBUG, INFO, WARNING, ERROR
HPS_LOG_LEVEL=INFO

# Filter health check endpoints from access logs (true/false)
# Set to false to see all access logs including health checks
HPS_FILTER_HEALTH_ACCESS_LOG=true

# Number of Uvicorn worker processes
# Recommended: 2-4 workers per CPU core
UVICORN_WORKERS=4

# =============================================================================
# GPU Configuration
# =============================================================================

# GPU device ID to use (0, 1, 2, etc.)
GPU_DEVICE_ID=0
